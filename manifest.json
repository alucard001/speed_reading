{
  "manifest_version": 3,
  "name": "Active Speed Reading",
  "description": "Allow you to speed read the current page.  Support Chinese and English.",
  "version": "0.0.1",
  "icons": {
    "16": "images/speed-reading16x16.png",
    "32": "images/speed-reading32x32.png",
    "48": "images/speed-reading48x48.png",
    "128": "images/speed-reading128x128.png"
  },
  "action": {
    "default_title": "Active Speed Reading"
  },
  "side_panel": {
    "default_path": "speedread.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  }
}